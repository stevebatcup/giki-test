<div class=' flex flex-col p-8 bg-gray-200 rounded-md border border-gray-800 shadow text-center space-y-6'>

  <h1 class='font-semibold text-xl'>Upload a food product data file</h1>

  <%= form_for @food_product, multipart: true do %>
    <div class='flex flex-col space-y-10'>
      <%= file_field_tag :file, class: 'w-full border border-gray-300 rounded-md p-2' %>
      <%= submit_tag "Upload", class: 'bg-green-600 text-white text-lg font-bold px-8 py-2 rounded-lg shadow cursor-pointer' %>
    </div>
  <% end %>
</div>